{
  "template" : "pcapture*",
  "settings" : {
    "index.refresh_interval" : "15s",
    "number_of_shards" : 1,
    "number_of_replicas" : 0
  },
  "mappings" : {
    "_default_" : {
       "_all" : {"enabled" : true, "omit_norms" : true},
       "dynamic_templates" : [ 
       {
          "geo_fields" : {
            "mapping": {
              "type": "geo_point"
            },
            "match" : "geopoint"
          }
       }, {
          "ts_fields" : {
            "mapping" : {
              "type" : "date"
            },
            "match" : "ts"
          }
 	}, {
          "cdr_fields" : {
            "mapping" : {
              "type" : "date"
            },
            "match" : "cdr_*"
          }
       }, {
          "ip_fields" : {
            "mapping" : {
              "type" : "ip"
            },
            "match" : "ip"
          }
	}, {
          "ip_fields_extra" : {
            "mapping" : {
              "type" : "ip"
            },
            "match" : "*_ip"
          }
	}, {
          "nested_fields" : {
            "mapping" : {
              	"type" : "nested",
	 	"include_in_parent": true
            },
            "match" : "vrq_*"
          }
        }, {
          "string_fields" : {
               "match" : "*",
               "match_mapping_type" : "string",
               "mapping" : {
                 "type" : "string", "index" : "analyzed", "omit_norms" : true,
                   "fields" : {
                     "raw" : {"type": "string", "index" : "not_analyzed", "ignore_above" : 256}
                   }
               }
             }
       } ],       
	 "properties" : {
		 "@version": { "type": "string", "index": "not_analyzed" },
		 "mos": { "type": "integer" },
		 "pdd": { "type": "integer" },
		 "vst": { "type": "integer" },
		 "srd": { "type": "integer" },
		 "codec_*": { "type": "integer" },
		 "sss": { "type": "integer" },
		 "sdp_*": { "type": "integer" },
		 "gid": { "type": "integer" }
       }
    }
  }
}
